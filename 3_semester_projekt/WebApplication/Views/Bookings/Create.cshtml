@model WebClientMVC.Models.Booking


@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SeatsBooked" class="control-label"></label>
                <input asp-for="SeatsBooked" class="form-control" />
                <span asp-validation-for="SeatsBooked" class="text-danger"></span>
            </div>

            <div class="form-group">
                @Html.DropDownList("rowBooked",
                                    new SelectList(Enum.GetValues(typeof(WebClientMVC.Models.Booking.Rows))),
                                    "Select Row",
                                    new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.DropDownList("seatsBookedOnRow",
                                    new SelectList(Enum.GetValues(typeof(WebClientMVC.Models.Booking.SeatOnRow))),
                                    "Select Seat on row",
                                    new { @class = "form-control" })
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

